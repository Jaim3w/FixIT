<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".citasFragment">

    <LinearLayout
        android:id="@+id/fondo"
        android:layout_width="413dp"
        android:layout_height="473dp"
        android:layout_margin="16dp"
        android:background="@drawable/card_citas"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Ingresa los datos"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spDui"
                    android:layout_width="345dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="34dp" />

                <Spinner
                    android:id="@+id/spDuiEmpleado"
                    android:layout_width="345dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="34dp" />

                <EditText
                    android:id="@+id/fechaCita"
                    android:layout_width="346dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/imputtext"
                    android:ems="10"
                    android:hint="Fecha"
                    android:inputType="text"
                    android:paddingStart="18dp" />

                <EditText
                    android:id="@+id/descripcionCita"
                    android:layout_width="346dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/imputtext"
                    android:ems="10"
                    android:hint="Descripcion"
                    android:inputType="text"
                    android:paddingStart="18dp" />

                <Button
                    android:id="@+id/btncitaTaller"
                    android:layout_width="213dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/wybtn"
                    android:text="Crear"
                    android:textAllCaps="false"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>