<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".citasFragment">

    <LinearLayout
        android:id="@+id/fondo"
        android:layout_width="385dp"
        android:layout_height="439dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:background="@drawable/card_citas"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />





    <EditText
        android:id="@+id/editTextText9"
        android:layout_width="275dp"
        android:layout_height="36dp"
        android:background="@drawable/imputtext"
        android:ems="10"
        android:hint="    Dui del cliente"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />

    <EditText
        android:id="@+id/editTextText10"
        android:layout_width="275dp"
        android:layout_height="37dp"
        android:background="@drawable/imputtext"
        android:ems="10"
        android:hint="   Dui del encargado"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425" />

    <EditText
        android:id="@+id/editTextText11"
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:background="@drawable/imputtext"
        android:ems="10"
        android:hint="    Fecha"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535" />

    <EditText
        android:id="@+id/editTextText12"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:background="@drawable/imputtext"
        android:ems="10"
        android:hint="    Descripcion"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_to_startOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_to_topOf="parent"
        app:layout_constraintVertical_bias="0.654" />

    <Button
        android:id="@+id/btncitaTaller"
        android:layout_width="148dp"
        android:layout_height="42dp"
        android:background="@drawable/btn2"
        android:text="Crear"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_to_startOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_to_topOf="parent"
        app:layout_constraintVertical_bias="0.761" />

</androidx.constraintlayout.widget.ConstraintLayout>