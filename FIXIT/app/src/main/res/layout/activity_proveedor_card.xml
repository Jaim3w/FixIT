<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".ProveedorCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/proveedor"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Las pinturitas"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/telefono"
                android:textStyle="bold"
                android:layout_marginStart="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2132-2335"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgBorrar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="-10dp"
            app:srcCompat="@drawable/img_delete" />

        <ImageView
            android:id="@+id/imgEditar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/img_editar1" />

    </LinearLayout>

</androidx.cardview.widget.CardView>