<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crear_proveedores">

    <include
        layout="@layout/activity_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fondo"
        android:layout_width="386dp"
        android:layout_height="457dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="45dp"
        android:layout_weight="1"
        android:background="@drawable/card_citas"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Ingresar proveedor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fondo" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="#979494"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/imgmenuadmin2" />

        <EditText
            android:id="@+id/txtDuiProveedor"
            android:layout_width="275dp"
            android:layout_height="36dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:hint="Dui"
            android:inputType="text"
            android:paddingStart="18dp" />

        <EditText
            android:id="@+id/txtNombreProveedor"
            android:layout_width="275dp"
            android:layout_height="36dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="text"
            android:paddingStart="18dp" />

        <EditText
            android:id="@+id/txtApellidosProveedor"
            android:layout_width="275dp"
            android:layout_height="36dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:hint="Apellidos"
            android:inputType="text"
            android:paddingStart="18dp" />


        <EditText
            android:id="@+id/txtTelefonoProveedor"
            android:layout_width="275dp"
            android:layout_height="36dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:hint="Telefono"
            android:inputType="text"
            android:paddingStart="18dp" />

        <EditText
            android:id="@+id/txtCorreoElectronicoProveedor"
            android:layout_width="275dp"
            android:layout_height="36dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:hint="Correo electronico"
            android:inputType="text"
            android:paddingStart="18dp" />

        <EditText
            android:id="@+id/txtDirecccionProveedor"
            android:layout_width="275dp"
            android:layout_height="36dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:hint="DirecciÃ³n"
            android:inputType="text"
            android:paddingStart="18dp" />

        <Button
            android:id="@+id/btnIngresarProveedor"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_agregar"
            android:text="Agregar nuevo proveedor"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

    </LinearLayout>

    <include
        android:id="@+id/include_nav"
        layout="@layout/activity_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>