<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".citas">

    <include
        layout="@layout/activity_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/include_nav"
        layout="@layout/activity_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fondo"
        android:layout_width="375dp"
        android:layout_height="452dp"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:background="@drawable/card_citas"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" >

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="-32dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Citas"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"

            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Ingresa los datos"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextText9"
            android:layout_width="275dp"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:hint="    Dui del cliente"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextText10"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="55dp"
            android:hint="   Dui del encargado"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextText11"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:hint="    Fecha"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="55dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextText12"
            android:layout_width="270dp"
            android:layout_height="42dp"
            android:background="@drawable/imputtext"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="55dp"
            android:hint="    Descripcion"
            android:inputType="text" />

        <Button
            android:id="@+id/btncitaTaller"
            android:layout_width="148dp"
            android:layout_height="42dp"
            android:background="@drawable/btn2"
            android:text="Crear"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="120dp"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>