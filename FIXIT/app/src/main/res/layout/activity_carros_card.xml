<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    tools:context=".carros_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgImagenCardCarros"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="14dp"
                    android:text="Cliente"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtClienteCarroCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="14dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:paddingStart="14dp"
                    android:text="Placa"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtPlacaCarroCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="14dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="14dp"
                android:text="Fecha de registro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtfechaRegistroCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="14dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Nuevo campo para Descripción del carro -->
            <TextView
                android:id="@+id/textViewDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="14dp"
                android:text="Descripción "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtDescripcionCarroCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="14dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Nuevo campo para Color del carro -->
            <TextView
                android:id="@+id/textViewColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="14dp"
                android:text="Color del carro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtColorCarroCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="14dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgActualizarCarros"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ajustes1" />

            <ImageView
                android:id="@+id/imgEliminarCarros"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/borrar1" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>